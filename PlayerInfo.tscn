script/source = "extends Node

const SAVE_PATH := \"user://profile.json\"
const SCN_PLAYGROUND := preload(\"res://playground.tscn\")
const SCN_PROFILE := preload(\"res://PlayerInfo.tscn\")

func _ready() -> void:
	if FileAccess.file_exists(SAVE_PATH):
		call_deferred(\"_goto_playground\")
	else:
		call_deferred(\"_goto_profile\")
		
func _goto_playground() -> void:
	var err := get_tree().change_scene_to_packed(SCN_PLAYGROUND)
	if err != OK:
		push_error(\"❌ 载入 playground 失败: %s\" % err)

func _goto_profile() -> void:
	var err := get_tree().change_scene_to_packed(SCN_PROFILE)
	if err != OK:
		push_error(\"❌ 载入 PlayerInfo 失败: %s\" % err)
		
func save_profile(data: Dictionary) -> void:
	var file := FileAccess.open(SAVE_PATH, FileAccess.WRITE)
	file.store_string(JSON.stringify(data))
	file.close()

func get_player_file_path(store_name: String) -> String:
	return \"user://%s.json\" % store_name
	
func create_new_player(store_name: String) -> void:
	var data = {
		\"store_name\": store_name,
		\"coins\": 1000,
		\"spent\": 0,
	}
	var file = FileAccess.open(get_player_file_path(store_name), FileAccess.WRITE)
	file.store_string(JSON.stringify(data))
	file.close()
	
func load_player_data(store_name: String) -> Dictionary:
	var path = get_player_file_path(store_name)
	if FileAccess.file_exists(path):
		var file = FileAccess.open(path, FileAccess.READ)
		var text = file.get_as_text()
		file.close()
		var data = JSON.parse_string(text)
		if typeof(data) == TYPE_DICTIONARY:
			return data
	return {}  # 不存在或读取失败

func _input(event):

	if event is InputEventKey and event.pressed and event.keycode == KEY_ESCAPE:
		get_tree().quit()

func _on_texture_button_pressed() -> void:
	$ClickSound.play() # 等待音效播放完毕	
	var name = $\"Control/Shop name\".text.strip_edges()
	
	if name == \"\":
		$Control/Label2.text = \"店名不能为空\"
	else:
		Global.current_store_name = name          
		Global.save_game(name)  
		$Control/Label2.text = \"COMPLETE！\"
		await $ClickSound.finished
		get_tree().change_scene_to_file(\"res://playground.tscn\")
	
func _on_shop_name_focus_exited() -> void:
	var input_name = $\"Control/Shop name\".text.strip_edges()  # 用户输入的文件名
	
	if input_name == \"\":
		print(\"❌ 文件名不能为空\")
		$ErrorLabel.text = \"请输入店铺名称。\"
		return
		
func create_new_shop_file(path: String) -> void:
	var default_data = {
		\"money\": 0,
		\"shop_name\": $\"Control/Shop name\".text.strip_edges(),
		\"inventory\": []
	}

	var json_string = JSON.stringify(default_data, \"\\t\")
	
	if FileAccess.file_exists(json_string):
		print(\"✅ 找到存档文件: \", json_string)
		get_tree().change_scene_to_file(\"res://playground.tscn\")
	else:
		print(\"❌ 未找到该文件，将自动创建新文件: \", json_string)
		create_new_player(json_string)
		get_tree().change_scene_to_file(\"res://playground.tscn\")
"

[sub_resource type="GDScript" id="GDScript_wbq6p"]
script/source = "extends Control

const SAVE_PATH := \"res://DATA//player_progress.cfg\"

var coins := 0
var upgrade_level := 0
var current_round := 0

func save():
	var cfg := ConfigFile.new()
	cfg.set_value(\"Progress\", \"coins\", coins)
	cfg.set_value(\"Progress\", \"upgrade_level\", upgrade_level)
	cfg.set_value(\"Progress\", \"current_round\", current_round)
	cfg.save(SAVE_PATH)

func load():
	var cfg := ConfigFile.new()
	if cfg.load(SAVE_PATH) != OK:
		return  # 无存档可加载
	coins = cfg.get_value(\"Progress\", \"coins\", 0)
	upgrade_level = cfg.get_value(\"Progress\", \"upgrade_level\", 1)
	current_round = cfg.get_value(\"Progress\", \"current_round\", 1)
"

